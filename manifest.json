{
	"name": "Fontastic",
	"author": "Brent Yurek",
	"manifest_version": 2,
	"description": "Replace fonts from CDNs with local copies.",
	"version": "0.4",

	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],

	"web_accessible_resources": [
		"fonts/*/*.woff2",
		"icons/*/*.woff2"
	],

	"background": {
		"scripts": ["fontastic.js"]
	},

	"applications": {
		"gecko": {
			"id": "fontastic@bread.yogurt"
		}
	}
}
